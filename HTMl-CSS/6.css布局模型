#box1{
    width:335px;
    height:335px;
    float:left;/*可以用 CSS 定义为浮动，如 div、p、table、img 等元素都可以被定义为浮动。*/
    margin:20px;
}
#box2{
  width:50px;
    height:50px;
  position:absolute;/*绝对定位*/
    right:100px;
    top:20px;
}
#box3{
  width:300px;
    height:300px;
  position:relative;/*相对定位，（相对于以前位置左上角）向右移动100象素，向下移动100象素。*/
    left:100px;
    top:100px;
      }
      #box4{
  width:300px;
    height:300px;
  position:fixed;/*固定定位,实现浏览器视图右下角定位*/
    bottom:0px;
    right:0px;
      }
      #box5{
     width:80%;
        position:relative;
        bottom: 44px;
    
}
div{
    border:1px solid red;
}
</style>
